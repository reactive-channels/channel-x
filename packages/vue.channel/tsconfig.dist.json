{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/vue.channel/types",
    "declaration": true,
    "types": ["vue-i18n", "node","vue"], 
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*.md",
    "**/package.json",
    "src/lib/**/*.js",
    "src/lib/**/*.jsx",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/lib/**/*.vue",
    "src/lib/**/*.json"
  ],
  "exclude": ["**/*.spec.js", "**/*.spec.jsx", "**/*.spec.ts"],
}